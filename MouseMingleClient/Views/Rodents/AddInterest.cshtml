@{
  ViewData["Title"] = "Questionnaire";
}

@model MouseMingleClient.Models.Rodent

<h3>Add Interests to your Rodent @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  <label>Choose your Interests: </label>
  
  <ul>
    @foreach (var interest in ViewData["allInterests"] as List<Interest>)
      {
        @Html.HiddenFor(model => model.RodentId)
        @Html.HiddenFor(model => model.RodentInterests)
        <input type="checkbox" name="interestId" value="@interest.InterestId"> @interest.Description
        <br>
      }
  </ul>

  
  <input type="submit" value="Save" class="btn btn-primary"/>
}

<hr />
<p>@Html.ActionLink("Back to All Rodents", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>





